{
	"name": "translation-service",
	"version": "1.0.0",
	"description": "Translate complete sentences based on existing data",
	"scripts": {
		"build": "tsc --build",
		"clean": "tsc --build --clean",
		"start": "NODE_ENV=prod typeorm migration:run && node dist/src/index.js",
		"dev": "NODE_ENV=dev ts-node-dev --respawn --transpile-only ./src/index.ts",
		"debug": "ts-node-dev --inspect --respawn --transpile-only ./src/index.ts",
		"migrate": "npm run build && NODE_ENV=prod typeorm migration:run",
		"migrate:undo": "typeorm migration:revert",
		"test": "NODE_ENV=test jest",
		"coverage": "NODE_ENV=test jest -coverage",
		"lint": "eslint src/**/*.ts",
		"lint:fix": "eslint src/**/*.ts --fix"
	},
	"husky": {
		"hooks": {
			"pre-commit": "npm run lint"
		}
	},
	"jest": {
		"globals": {
			"ts-jest": {
				"ignoreCoverageForDecorators": true,
				"ignoreCoverageForAllDecorators": true
			}
		},
		"roots": [
			"<rootDir>/test"
		],
		"testMatch": [
			"<rootDir>/test/**/*.spec.ts"
		],
		"transform": {
			"^.+\\.(ts|tsx)$": "ts-jest"
		},
		"collectCoverage": true,
		"collectCoverageFrom": [
			"./src/**/*.ts"
		],
		"coverageThreshold": {
			"global": {
				"branches": 50,
				"functions": 40,
				"lines": 50,
				"statements": 50
			}
		}
	},
	"author": "Andrei Fitai",
	"license": "ISC",
	"dependencies": {
		"dotenv": "^8.2.0",
		"express": "^4.17.1",
		"js-levenshtein": "^1.1.6",
		"mysql2": "^2.2.5",
		"pino": "^6.11.3",
		"reflect-metadata": "^0.1.13",
		"typeorm": "^0.2.32"
	},
	"devDependencies": {
		"@types/express": "^4.17.11",
		"@types/jest": "^26.0.23",
		"@types/js-levenshtein": "^1.1.0",
		"@types/multer": "^1.4.5",
		"@types/node": "^15.0.2",
		"@types/pino": "^6.3.8",
		"@typescript-eslint/eslint-plugin": "^4.22.0",
		"@typescript-eslint/parser": "^4.22.0",
		"eslint": "^7.25.0",
		"eslint-config-prettier": "^8.3.0",
		"eslint-config-standard": "^16.0.2",
		"eslint-plugin-import": "^2.22.1",
		"eslint-plugin-jest": "^24.3.6",
		"eslint-plugin-node": "^11.1.0",
		"eslint-plugin-prettier": "^3.4.0",
		"eslint-plugin-promise": "^4.3.1",
		"husky": "^6.0.0",
		"jest": "^26.6.3",
		"pino-pretty": "^4.7.1",
		"prettier": "^2.2.1",
		"ts-node-dev": "^1.1.6",
		"ts-jest": "^26.5.6",
		"typescript": "^4.2.4"
	}
}
