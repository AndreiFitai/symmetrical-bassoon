{
	"name": "translation-service",
	"version": "1.0.0",
	"description": "Translate complete sentences based on existing data",
	"scripts": {
		"build": "tsc --build",
		"clean": "tsc --build --clean",
		"start": "npm run build && typeorm migration:run && node dist/src/index.js",
		"dev": "NODE_ENV=development ts-node-dev --respawn --transpile-only ./src/index.ts",
		"debug": "ts-node-dev --inspect --respawn --transpile-only ./src/index.ts",
		"migrate": "NODE_ENV=production npm run build && typeorm migration:run",
		"migrate:undo": "typeorm migration:revert",
		"pretest": "npm run build",
		"test": "NODE_ENV=test mocha --spec dist/test/index.spec.js",
		"lint": "eslint src/**/*.ts",
		"lint:fix": "eslint src/**/*.ts --fix"
	},
	"husky": {
		"hooks": {
			"pre-commit": "npm run lint"
		}
	},
	"author": "Andrei Fitai",
	"license": "ISC",
	"dependencies": {
		"dotenv": "^8.2.0",
		"express": "^4.17.1",
		"js-levenshtein": "^1.1.6",
		"mysql2": "^2.2.5",
		"reflect-metadata": "^0.1.13",
		"typeorm": "^0.2.32"
	},
	"devDependencies": {
		"@types/chai": "^4.2.17",
		"@types/express": "^4.17.11",
		"@types/js-levenshtein": "^1.1.0",
		"@types/mocha": "^8.2.2",
		"@types/multer": "^1.4.5",
		"@types/node": "^15.0.2",
		"@typescript-eslint/eslint-plugin": "^4.22.0",
		"@typescript-eslint/parser": "^4.22.0",
		"chai": "^4.3.4",
		"eslint": "^7.25.0",
		"eslint-config-prettier": "^8.3.0",
		"eslint-config-standard": "^16.0.2",
		"eslint-plugin-import": "^2.22.1",
		"eslint-plugin-node": "^11.1.0",
		"eslint-plugin-prettier": "^3.4.0",
		"eslint-plugin-promise": "^4.3.1",
		"husky": "^6.0.0",
		"mocha": "^8.3.2",
		"prettier": "^2.2.1",
		"ts-node-dev": "^1.1.6",
		"typescript": "^4.2.4"
	}
}
