{
    "env": {
        "es2021": true,
        "node": true,
        "mocha": true

    },
    "extends": [
        "standard",
        "eslint-config-prettier"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": 12,
        "sourceType": "module"
    },
    "plugins": [
        "@typescript-eslint",
        "eslint-plugin-prettier"
    ],
    "rules": {
      "prettier/prettier": "error"
    }
}
